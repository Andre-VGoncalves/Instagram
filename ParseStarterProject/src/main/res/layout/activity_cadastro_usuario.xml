<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_degrade"
    tools:context="com.parse.starter.activity.CadastroUsuarioActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37dp"
            android:background="@drawable/usuario" />

        <EditText
            android:id="@+id/edtUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColorHint="@android:color/white"
            android:hint="Digite seu Usuario"
            android:background="@drawable/fundo_caixa_texto"
            android:padding="16dp"/>

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/edtUsuario"
            android:layout_alignRight="@+id/edtUsuario"
            android:layout_below="@+id/edtUsuario"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColorHint="@android:color/white"
            android:hint="Digite seu E-mail"
            android:background="@drawable/fundo_caixa_texto"
            android:padding="16dp"/>

        <EditText
            android:id="@+id/edtSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edtEmail"
            android:layout_alignStart="@+id/edtEmail"
            android:layout_below="@+id/edtEmail"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:inputType="textPassword"
            android:textColorHint="@android:color/white"
            android:hint="Digite seua Senha"
            android:background="@drawable/fundo_caixa_texto"
            android:padding="16dp"/>

        <Button
            android:id="@+id/btnCadastrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtSenha"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            android:text="Cadastrar"
            android:background="@drawable/fundo_botao"
            android:padding="16dp"/>

    </RelativeLayout>



</RelativeLayout>
